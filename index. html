  <script>
    let msgIndex = 0;
    const messages = [
      "Hey Unnati, Happy 1st Month Anniversary ğŸ’—",
      "You appeared like a shining star in my lowest phase ğŸŒŸ",
      "I think this combo is perfect: An imperfect guy & the perfect girl âœ¨",
      "Even 3 hours of talk feels like 3 minutes with you ğŸ˜Œ",
      "I just feel happy when you share the smallest things ğŸ’¬",
      "The way you smile, get frustrated, blush â€” it's heavenly ğŸ¥°",
      "You complete me. I'm not letting you go ever! ğŸ’‘",
      "Now say something... ğŸ˜Š"
    ];

    const surprises = [
      "You're the sunshine to my every cloudy day â˜€ï¸",
      "You're cuter than every emoji combined ğŸ°ğŸ¶ğŸ¥",
      "You have the prettiest heart I've ever known ğŸ’“",
      "Selfishly, I want to be your last first kiss, your last love story, and the one who gets to call you mine forever. ğŸ’Œ"
    ];

    function startStory() {
      document.querySelector("button").style.display = "none";
      document.getElementById("story").classList.remove("hidden");
      showMessage();
    }

    function showMessage() {
      if (msgIndex < messages.length) {
        document.getElementById("message").innerText = messages[msgIndex];
        msgIndex++;
        setTimeout(showMessage, 2000);
      } else {
        document.getElementById("replyBox").classList.remove("hidden");
      }
    }

    function checkReply() {
      const input = document.getElementById("loveReply").value.toLowerCase().trim();
      const result = document.getElementById("replyResult");
      if (input.includes("i love you too")) {
        result.innerText = "Awww, thatâ€™s exactly what I wanted to hear! ğŸ’–";
        document.getElementById("replyBox").classList.add("hidden");
        document.getElementById("quizBox").classList.remove("hidden");
      } else {
        result.innerText = "Hmm... that's not the magical phrase! Try again ğŸ˜‰";
      }
    }

    function quizAnswer(ans) {
      document.getElementById("quizResult").innerText = "I knew you'd pick that! You know me so well ğŸ˜";
      document.getElementById("quizBox").classList.add("hidden");
      document.getElementById("surpriseBox").classList.remove("hidden");
    }

    function showSurprise() {
      const random = surprises[Math.floor(Math.random() * surprises.length)];
      document.getElementById("surpriseMsg").innerText = random;
    }

    // Floating hearts
    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.innerText = "ğŸ’—";
      heart.style.left = Math.random() * 100 + "vw";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 4000);
    }, 600);
  </script>
